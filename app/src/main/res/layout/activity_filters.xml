<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/pais"
        android:id="@+id/text_input_layout_pais"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPais" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/ciudad"
        android:id="@+id/text_input_layout_ciudad"
        android:layout_alignParentRight="true"
        android:layout_alignEnd="@+id/text_input_layout_pais"
        android:layout_alignRight="@+id/text_input_layout_pais">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtCiudad" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/txtFechaDesde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/fecha_desde"
        android:layout_below="@+id/text_input_layout_pais"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFechaDesde"
        android:id="@+id/dtpFechaDesde" />
    <TextView
        android:id="@+id/txtFechaHasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/fecha_hasta"
        android:layout_alignEnd="@+id/text_input_layout_pais"
        android:layout_below="@+id/text_input_layout_ciudad"
        android:layout_alignRight="@+id/txtFechaDesde"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fecha_hasta_default"
        android:layout_below="@+id/txtFechaHasta"
        android:layout_alignStart="@+id/txtFechaHasta"
        android:id="@+id/dtpFechaHasta"
        android:layout_alignLeft="@+id/txtFechaHasta" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="@string/distancia"
        android:id="@+id/text_input_layout_distancia"
        android:layout_below="@+id/dtpFechaDesde">
        <android.support.design.widget.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtDistancia" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>